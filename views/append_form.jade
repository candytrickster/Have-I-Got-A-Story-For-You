extends layout

block content

    h1.storyTitle Add To Story
    each story in stories
        h2.storyTitle #{story.title}
        h3.storyContent #{story.content}
        form(id='storyForm', method='POST', action='/story/append/'+story.id).storyForm
            .form-group
                label(for='new_content') Story
                textarea#content.form-control(rows='10', name='new_content')
            .form-group
                button.btn.btn-primary(type='submit', id='enter') Add