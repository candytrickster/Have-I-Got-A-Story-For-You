extends layout

block content

    table(class='table').storyHome
                    tr
                        th Title
                        th Story
                    each story in stories
                        tr
                            td #{story.title}
                            td #{story.content}
                            td 
                                    button(class="btn", data-action="bea", onclick="location.href='story/#{story.id}';").btn-primary View
